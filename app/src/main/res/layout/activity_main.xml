<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/back_sensor"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="-50dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        app:srcCompat="@drawable/czujnik_0" />

    <ImageView
        android:id="@+id/right_sensor"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="0dp"
        android:background="#00FFFFFF"
        android:rotation="90"
        app:srcCompat="@drawable/czujnik_0" />

    <ImageView
        android:id="@+id/left_sensor"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:background="#00FFFFFF"
        android:rotation="-90"
        app:srcCompat="@drawable/czujnik_0" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/wifi_off" />

    <Button
        android:id="@+id/wsBtn"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/server_off" />

    <Button
        android:id="@+id/forwardBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/arrow_up"
        android:minWidth="80dp"
        android:minHeight="80dp"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/rightBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="525dp"
        android:layout_marginRight="80dp"
        android:layout_toEndOf="@+id/forwardBtn"
        android:background="@drawable/arrow_right"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/leftBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="false"
        android:layout_marginTop="525dp"
        android:layout_toStartOf="@+id/forwardBtn"
        android:background="@drawable/arrow_left"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/rearBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="600dp"
        android:background="@drawable/arrow_down"
        tools:layout_centerHorizontal="true"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/front_sensor"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="-50dp"
        android:background="#00FFFFFF"
        android:rotation="0"
        app:srcCompat="@drawable/czujnik_0" />

    <Button
        android:id="@+id/realTime"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/realtime_on" />

    <Button
        android:id="@+id/autonomic"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/autonomic_off" />

    <Button
        android:id="@+id/autonomic_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="GO FORWARD"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/autonomic_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:text="STOP"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/settings"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/settings" />

    <EditText
        android:id="@+id/leftMotorPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="450dp"
        android:width="150dp"
        android:ems="10"
        android:hint="left motor power"
        android:inputType="number"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/rightMotorPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="10dp"
        android:width="150dp"
        android:ems="10"
        android:hint="right motor power"
        android:inputType="number" />

    <Button
        android:id="@+id/update_set"
        android:layout_width="35dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="475dp"
        android:text="UPDATE"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/turnLeftInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:width="150dp"
        android:ems="10"
        android:hint="turn left time"
        android:inputType="number" />

    <Button
        android:id="@+id/turnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:text="LEFT"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/turnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="650dp"
        android:text="RIGHT"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/keepgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="550dp"
        android:text="KEEEP GO"
        tools:visibility="invisible" />

    <EditText
        android:id="@+id/turnRightInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:width="150dp"
        android:ems="10"
        android:hint="turn right time"
        android:inputType="number" />

    <EditText
        android:id="@+id/leftMotorPowerTurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="550dp"
        android:width="150dp"
        android:ems="10"
        android:hint="left power left turn"
        android:inputType="number" />

    <EditText
        android:id="@+id/rightMotorPowerTurnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="600dp"
        android:width="150dp"
        android:ems="10"
        android:hint="right power left turn"
        android:inputType="number" />

    <EditText
        android:id="@+id/leftMotorPowerTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="10dp"
        android:width="150dp"
        android:ems="10"
        android:hint="left power right turn"
        android:inputType="number" />

    <EditText
        android:id="@+id/rightMotorPowerTurnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="10dp"
        android:width="150dp"
        android:ems="10"
        android:hint="right power right turn"
        android:inputType="number" />

    <Button
        android:id="@+id/record_move"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="550dp"
        android:text="RECORD" />

</RelativeLayout>
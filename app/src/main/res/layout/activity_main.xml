<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/back_sensor"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="-50dp"
        android:background="#00FFFFFF"
        android:rotation="180"
        app:srcCompat="@drawable/czujnik_0" />

    <ImageView
        android:id="@+id/right_sensor"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="0dp"
        android:background="#00FFFFFF"
        android:rotation="90"
        app:srcCompat="@drawable/czujnik_0" />

    <ImageView
        android:id="@+id/left_sensor"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="220dp"
        android:background="#00FFFFFF"
        android:rotation="-90"
        app:srcCompat="@drawable/czujnik_0" />

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="405dp"
        android:layout_height="48dp"
        android:layout_margin="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:background="@android:color/holo_red_light"
        android:text="NotConnected to Robot WIFI" />

    <Button
        android:id="@+id/wsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="403dp"
        android:background="@android:color/holo_red_light"
        android:text="NotConnected to Robot" />

    <Button
        android:id="@+id/forwardBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="100dp"
        android:text="FORWARD" />

    <Button
        android:id="@+id/rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="1dp"
        android:text="RIGHT" />

    <Button
        android:id="@+id/leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="0dp"
        android:text="LEFT" />

    <Button
        android:id="@+id/rearBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="0dp"
        android:text="REAR" />

    <ImageView
        android:id="@+id/front_sensor"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="-50dp"
        android:background="#00FFFFFF"
        android:rotation="0"
        app:srcCompat="@drawable/czujnik_0" />

    <Button
        android:id="@+id/realTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="480dp"
        android:width="150dp"
        android:background="#FF0000"
        android:text="realTime" />

    <Button
        android:id="@+id/autonomic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="480dp"
        android:width="150dp"
        android:background="#FF0000"
        android:text="Autonomic" />

    <Button
        android:id="@+id/autonomic_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="GO FORWARD" />

    <Button
        android:id="@+id/autonomic_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="620dp"
        android:text="STOP" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="480dp"
        android:text="SETT" />

    <EditText
        android:id="@+id/leftMotorPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:width="100dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/rightMotorPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="550dp"
        android:width="100dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/update_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="550dp"
        android:text="UPDATE" />

    <EditText
        android:id="@+id/turnInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/turnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:text="LEFT" />

    <Button
        android:id="@+id/turnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="550dp"
        android:text="RIGHT" />

    <Button
        android:id="@+id/keepgoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="550dp"
        android:text="KEEEP GO" />

</RelativeLayout>